{
  "name": "jcore-cli",
  "version": "1.0.0-beta.8",
  "main": "src/main.ts",
  "scripts": {
    "test": "eslint src && prettier --check src",
    "build": "esbuild src/main.ts --bundle --minify --platform=node --outfile=bin/jcore",
    "watch": "esbuild src/main.ts --bundle --watch  --minify --sourcemap --platform=node --outfile=bin/jcore",
    "prettier": "prettier --write src",
    "preversion": "npm test",
    "version": "",
    "postversion": "git push && git push --tags"
  },
  "config": {
    "branch": "fluffycritter"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@sentry/node": "^7.38.0",
    "adm-zip": "^0.5.10",
    "semver": "^7.3.8",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "esbuild": "^0.16.17",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "2.8.3",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "quoteProps": "consistent"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {},
    "rules": {}
  }
}
